                    }
                }
            }
        },
        "models.ProductImage": {
            "type": "object",
            "properties": {
                "base_64_image": {
                    "type": "string"
                },
                "checksum": {
                    "type": "string"
                },
                "compressedImage": {
                    "type": "array",
                    "items": {
                        "type": "integer"
                    }
                },
                "order": {
                    "type": "integer"
                }
            }
        },
        "transport.AccessTokenResponse": {
            "type": "object",
            "properties": {
                "access_token": {
                    "type": "string"
                }
            }
        },
        "transport.CreateListingResponse": {
            "type": "object",
            "properties": {
                "product_id": {
                    "type": "string"
                }
            }
        }
    }
